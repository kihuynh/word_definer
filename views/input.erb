
<div class="container">
  <div class="row">
    <h2 id="output-title">Enter Some Words To Help You Study</h2>
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
      <div class="form_div">
          <form action="/" method="post">
            <div class="form-group">
              <label for="word">Enter word</label>
              <input name="word" class="form-control" type="text">
            </div>
            <div class="form-group">
              <label for="word_def">Add the definition of the word</label>
              <input name="word_def" class="form-control" type="text">
            </div>
            <button type="submit" name="button" class="btn btn-info">Add word</button>
          </form>
      </div>
    </div>
    <div class="col-md-3">
    </div>
  </div>
</div>
<div class="container" id="word-list">
  <h2 id="list-title">Your Word List</h2>
  <% @list.each do |vocab| %>
    <p><a href="/output/<%= vocab.id %>" class="link"><%= vocab.word %></a> </p>
  <% end %>
</div
